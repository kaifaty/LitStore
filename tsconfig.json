{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es2017",
      "scripthost",
      "es2015.collection",
      "es2015.promise",
      "esnext.bigint",
      "webworker"
    ],
    "moduleResolution": "node"
  }
}
